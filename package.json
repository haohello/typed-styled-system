{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest"
  },
  "devDependencies": {
    "beachball": "^1.14.1",
    "jest": "^24.9.0",
    "lerna": "^3.16.4",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.4",
    "@types/jest": "^24.0.19",
    "ts-jest": "^24.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/packages/**/test/*.ts"
    ],
    "collectCoverageFrom": [
      "**/packages/**/src/*.ts"
    ],
    "coverageReporters": [
      "lcov",
      "text",
      "html"
    ]
  }
}
