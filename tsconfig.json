{
    "compilerOptions": {
      "composite": true,
      "strict": true,
      "outDir": "./dist",
      "rootDir": ".",
      "declaration": true,
      "esModuleInterop": true,
      "jsx": "react",
      "importHelpers": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "allowJs": false,
      "noImplicitReturns": true,
      "noImplicitThis": false,
      "noImplicitAny": false,
      "strictNullChecks": false,
      "noUnusedLocals": false,
      "module": "commonjs",
      "target": "esnext",
      "lib": ["es2015", "es2016", "es2017", "es2018", "esnext", "dom"],
    },
    "exclude": [
      "node_modules",
      "dist"
    ]
  }